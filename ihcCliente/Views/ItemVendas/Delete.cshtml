@model ihcCliente.Models.ItemVenda

@{
    ViewData["Title"] = "Delete";
}


<div>
    <form asp-action="Delete" class="form-centralizado" style="margin-left:10%;">
        <dl class="row">
            <h1>Deletar</h1>
            <h3>Tem certeza de que deseja excluir isto?</h3>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Produto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Produto.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Venda)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Venda.VendaId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantidade)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantidade)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PrecoUnitario)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PrecoUnitario)
            </dd>
        </dl>
        <input type="hidden" asp-for="ItemVendaId" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-voltar" style="width: 100%;">Voltar</a>
    </form>
</div>

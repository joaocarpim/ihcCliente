@model ihcCliente.Models.Produto

@{
    ViewData["Title"] = "Delete";
}
  
<div>
    <form asp-action="Delete" class="form-centralizado" style="margin-left:10%;">
        <h1>Deletar</h1>
        <h3>Tem certeza de que deseja excluir isto?</h3>
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Descricao)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Preco)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Preco)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Estoque)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Estoque)
                </dd>
            </dl>
            <input type="hidden" asp-for="ProdutoId" />
            <input type="submit" value="Deletar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-voltar" style="width: 100%;">Voltar</a>
        </form>
    </div>
</div>
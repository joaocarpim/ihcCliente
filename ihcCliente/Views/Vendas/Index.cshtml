@model IEnumerable<ihcCliente.Models.Venda>

@{
    ViewData["Title"] = "Index";
}

<h1>Cadastro Vendas</h1>

<p>
    <a asp-action="Create" class="btn btn-criar">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataVenda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalVenda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataVenda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalVenda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.ClienteId)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-editar" asp-route-id="@item.VendaId">Editar</a>
                <a asp-action="Details" class="btn btn-detalhes" asp-route-id="@item.VendaId">Detalhes</a>
                <a asp-action="Delete" class="btn btn-deletar" asp-route-id="@item.VendaId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
